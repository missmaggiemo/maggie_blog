<div class="top center blue">
	<h1>Blog Post # <%= @blog_post.id %> </h1>
	<p><%= @blog_post.title %></p>
</div>

<div class="blog-post">
  <%= render @blog_post %>
</div>

<div class="pagination">
	<%= link_to("< Newer", blog_post_path(@next_post.id), class: "next_page") if @next_post %>
	<%= link_to("Older >", blog_post_path(@prev_post.id), class: "previous_page") if @prev_post %>
</div>
